    <!-- FEATURE -->
    <section id="feature">
        <div class="container">
            <div class="row">

                <div class="col-md-4 col-sm-4">
                    <div class="feature-thumb">
                        <span>01</span>
                        <h3>Trending Courses</h3>
                        <p>
                            At MALanguageHub, we offer a variety of trending English language courses tailored to meet the needs of learners at all levels. Our courses are designed to enhance your speaking, writing, and comprehension skills, ensuring you stay ahead in today’s competitive environment.
                        </p>
                    </div>
                </div>

                <div class="col-md-4 col-sm-4">
                    <div class="feature-thumb">
                        <span>02</span>
                        <h3>Interactive Environment</h3>
                        <p>
                            Experience immersive learning in a supportive environment at MALanguageHub. Our interactive classes promote engagement and collaboration, helping students develop their language skills effectively through practical exercises and group activities.
                        </p>
                    </div>
                </div>

                <div class="col-md-4 col-sm-4">
                    <div class="feature-thumb">
                        <span>03</span>
                        <h3>Certified Teachers</h3>
                        <p>
                            Learn from the best! Our team of certified teachers at MALanguageHub are dedicated professionals with extensive experience in teaching English as a second language. They employ innovative teaching methods to ensure effective learning experiences for all students.
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </section>


    <!-- ABOUT -->
    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12" style="margin-bottom: -30px;">
                    <div class="section-title">
                        <h2 class="text-center">About Us</h2>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="about-info">
                        <h2>Start your journey to a better life with online practical courses</h2>

                        <figure>
                           
                            <figcaption>
                                <h3>@Model.Aboutus.Title</h3>
                                <p>
                                    @Model.Aboutus.Description
                                </p>
                            </figcaption>
                        </figure>

                     
                    </div>
                </div>

                <div class="col-md-offset-1 m-5 col-md-4 col-sm-12">
                    <div class="circle-container">
                        <img src="~/images/@Model.Aboutus.ImageName"
                             alt="Image">
                    </div>
                </div>

            </div>
        </div>
    </section>


    <section id="team">
        <div class="container">
            <div class="row">

                <div class="col-md-12 col-sm-12" style="margin-bottom:-100px;">
                    <div class="section-title">
                        <h2>Teachers <small>Meet Professional Trainers</small></h2>
                    </div>
                </div>
                @foreach (var professionals in Model.ourProfessionals){

               
                    <div class="col-md-3 col-sm-6" style="margin-top:100px; height:400px;">
                        <div class="team-thumb " >
                            <div class="team-image">
                                    <img src="~/images/@professionals.ImageName" class="img-responsive" alt="">
                            </div>
                            <div class="team-info">
                                <h3>@professionals.Title</h3>
                                <span>@professionals.Description</span>

                            </div>
                            <ul class="social-icon">
                                    <li><a href="@professionals.FacebookLink" class="fa fa-facebook-square" attr="facebook icon"></a></li>
                                    <li><a href="@professionals.InstagramLink" class="fa fa-instagram"></a></li>
                                    <li><a href="@professionals.LinkedInLink" class="fa fa-linkedin"></a></li>
                            </ul>
                        </div>
                    </div>

                }


            </div>
        </div>
    </section>

    <section id="courses">
        <div class="container">
            <div class="row">

                <div class="col-md-12 col-sm-12">
                    <div class="section-title">
                        <h2>Popular Courses <small>Upgrade your skills with newest courses</small></h2>
                    </div>

                    <div class="owl-carousel owl-theme owl-courses">
                        @foreach (var course in Model.Courses)
                        {
                            <div class="col-md-4 col-sm-4">
                                <div class="item">
                                    <div class="courses-thumb">
                                        <div class="courses-top">
                                            <div class="courses-image">
                                                <img src="~/images/@course.ImageName" class="img-responsive" alt="">
                                            </div>
                                            <div class="courses-date">
                                                <span><i class="fa fa-calendar"></i>@course.StartingDate</span>
                                                <span><i class="fa fa-clock-o"></i>@course.Duration</span>
                                            </div>
                                        </div>

                                        <div class="courses-detail">
                                            <h3>@course.Title</h3>
                                            @{
                                                var description = course.Description;
                                                var isLongDescription = description.Length > 40;
                                                var shortDescription = isLongDescription ? description.Substring(0, 40) + "..." : description;
                                            }
                                            <p class="course-description" data-full="@description">@shortDescription</p>
                                            @if (isLongDescription)
                                            {
                                                <span class="toggle-description" style="cursor:pointer; color:blue; text-decoration:underline;">Read more</span>
                                            }
                                        </div>

                                        <div class="courses-info">
                                            @foreach (var professional in Model.ourProfessionals)
                                            {
                                                if (course.AllocatedTeacher == professional.Id)
                                                {
                                                    <div class="courses-author">
                                                        <img src="~/images/@professional.ImageName" class="custom-img-responsive" alt="">
                                                        <span>@professional.Title</span>
                                                    </div>
                                                }
                                            }
                                            <div class="courses-price">
                                                <span>@course.Status</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </section>


