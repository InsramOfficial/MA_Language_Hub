@page
@model MALanguageHub.Pages.Admin.AddHomeModel
@{
}
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <h1>
                    Add Home
                </h1>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <label class="form-label">Title</label>
                <input class="form-control" asp-for="home.Title" required placeholder="Enter Your Title">
                <span asp-validation-for="home.Title" class="text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <label class="form-label">Description</label>
                <textarea class="form-control" asp-for="home.Description" required rows="5" placeholder="Enter Your Description"></textarea>
                <span asp-validation-for="home.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <label class="form-label">Image</label>
                <input class="form-control" type="file" asp-for="home.Image" required>
                <span asp-validation-for="home.Image" class="text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center mt-3">
            <div class="col-md-6">
                <input type="submit" value="Add Home" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
